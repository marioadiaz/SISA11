<div class="container">
    <div class="card-header d-flex justify-content-between">
      <%if @cliente.baja%>
        <div><h2 class="my-0 font-size:8vw">Detalle cliente</h2></div>
        <div class="col-md-8">
          <%= link_to 'Editar Cliente', edit_cliente_path(@cliente), class: "btn btn-primary mr-3" %>
          <%= link_to "Crear Certificado", orden_fumigacions_new_path(:id => @cliente.id) , :class => 'btn btn-warning my-3'%>
          <%= link_to 'Eliminar', cliente_path(@cliente), method: :delete, :class => 'btn btn-danger', :target => 'blank', data: { confirm: "¿Estás seguro/a de eliminar el Cliente?" } %>
        </div>
      <%else%>
        <div><h2 class="my-0 font-size:8vw">Detalle cliente: <strong><span style="color:red">Cliente dado de baja en el sistema<span></strong></h2></div>     

      <%end%>   
    </div>
  <div class="card-body">
    <ul class="list-unstyled mt-3 mb-4 text-center">

      <h3>
        <strong>Nombre:</strong>
        <%= @cliente.nombre %>
      </h3>
      <h3>
        <strong>Apellido:</strong>
        <%= @cliente.apellido %>
      </h3>

      <h3>
        <strong>Cuit:</strong>
        <%= @cliente.cuit %>
      </h3>


      <h3>
        <strong>Rubro:</strong>
        <%= @cliente.rubro %>
      </h3>

      <h3>
        <strong>Domicilio:</strong>
        <%= @cliente.domicilio %>
      </h3>

      <h3>
        <strong>Barrio:</strong>
        <%= @cliente.barrio %>
      </h3>

      <h3>
        <strong>Localidad:</strong>
        <%= @cliente.localidad %>
      </h3>

      <h3>
        <strong>Celular:</strong>
        <%= @cliente.celular %>
      </h3>

      <h3>
        <strong>Telefono:</strong>
        <%= @cliente.telefono %>
      </h3>

      <h3>
        <strong>Correo:</strong>
        <%= @cliente.correo %>
      </h3>

      <h3>
        <strong>Observaciones:</strong>
        <%= @cliente.observaciones_cliente %>
      </h3>
      <h3>
        <strong>Tipo Cliente:</strong>
        <%= @cliente.tipo_cliente %>
      </h3>
      <h3>
        <strong>Calificación:</strong>
        <%= @cliente.calificacion %>
      </h3>
    </ul>

    <a class="btn btn-lg btn-block btn-dark" href="/clientes">Atrás</a>

  </div>
</div>