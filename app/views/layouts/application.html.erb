        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/pages/home">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-bug"></i>
                </div>
                <div class="sidebar-brand-text mx-3">SISA </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link"href="/clientes">
                    <i class="fas fa-user fa-tachometer-alt"></i>
                    <span >Clientes</span></a>
            </li>
       <li class="nav-item active">
                <a class="nav-link"  href="/orden_fumigacions">
                    <i class="fas fa-clipboard"></i>
                    <span>Certificados</span></a>
            </li>

                   <li class="nav-item active">
                <a class="nav-link"href="/tecnicos">
                    <i class="fas fa-calendar-alt"></i>
