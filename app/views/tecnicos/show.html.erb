<div class="container">
  <div class="card-header d-flex justify-content-between">
      <div><h2 class="my-0 font-size:8vw">Detalle Técnico</h2></div>
      <div class="col-md-8">
        <%= link_to 'Editar', edit_tecnico_path, class: "btn btn-primary mr-3" %>
        <%= link_to 'Eliminar', tecnico_path(@tecnico), method: :delete, :class => 'btn btn-danger', :target => 'blank', data: { confirm: "¿Estás seguro/a de eliminar el Técnico?" } %>
      </div>
    </div>
  <div class="card-body">
      <ul class="list-unstyled mt-3 mb-4 text-center">
          <h3>
            <strong>Documento de identidad:</strong>
            <%= @tecnico.dni%>
          </h3>
          <h3>
            <strong>Apellido:</strong>
            <%= @tecnico.apellido %>
          </h3>
          <h3>
            <strong>Nombre:</strong>
            <%= @tecnico.nombre%>
          </h3>
          <h3>
            <strong>Domicilio:</strong>
            <%= @tecnico.domicilio%>
          </h3>
          <h3>
            <strong>Barrio:</strong>
            <%= @tecnico.barrio%>
          </h3>
          <h3>
            <strong>Celular:</strong>
            <%= @tecnico.celular%>
          </h3>
          <h3>
            <strong>Telefono:</strong>
            <%= @tecnico.telefono%>
          </h3>
          <h3>
            <strong>Correo:</strong>
            <%= @tecnico.correo%>
          </h3>
          <h3>
            <strong>Observaciones:</strong>
            <%= @tecnico.observaciones_tecnico%>
          </h3>
      </ul>
    <a class="btn btn-lg btn-block btn-dark" href="/tecnicos">Atrás</a>
  </div>
</div>
