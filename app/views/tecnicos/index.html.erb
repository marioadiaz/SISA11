 <div class="container">
<h1>Listado de técnicos</h1>
<%= link_to "Crear Tecnico", tecnicos_new_path, :class => 'btn btn-warning my-3'%>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


<input class="ml-3 w-25" id="myInput" type="text" placeholder="Buscar..">
<table class=" table-striped table table-responsive">
  <tr>
    <thead  class="thead-dark">
      	<th>Apellido</th>
      	<th>Nombre</th>
        <th>Domicilio</th>
      	<th>Celular</th>
      	<th>Correo</th>
      <th colspan="3"></th>

    </thead>
  </tr>
  <tbody id="myTable">
  <% @tecnicos.each do |tecnico| %>
  	<%if tecnico.baja == true %>
	  	<tr>
	        <td><%= link_to "#{tecnico.apellido}", tecnico_path(tecnico) %></td>
          <td><%= link_to "#{tecnico.nombre}" ,tecnico_path(tecnico) %></td>
	        <td><%= tecnico.domicilio %></td>
	        <td><%= tecnico.celular %></td>
	        <td><%= tecnico.correo %></td>
	        <td>
	        	<%= link_to 'Eliminar', tecnico, method: :delete, data: { confirm: "¿Estás seguro/a?" }  %>
	        </td>
	  	</tr>
	<% end %>
  <% end %>
  </tbody>
</table>
