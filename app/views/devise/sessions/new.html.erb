<div class="container">
  <h1 class="text-center card-header my-2">Incio de sesi√≥n</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "sisa@sisa.com" %>

    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                placeholder: "Fumigacion112" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ingresar",  :class => "btn btn-warning"%>
  </div>
<% end %>

</div>
