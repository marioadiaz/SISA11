                          <%if orden_fumigacion.proximo_tratamiento.nil?   %>
                              <% orden_fumigacion_proxtrat = 0 %>
                              
                          <%else%>
                            <% orden_fumigacion_proxtrat = (orden_fumigacion.proximo_tratamiento - orden_fumigacion.fecha_vencimiento).to_i %>
                            
                          <%end%>

                          <div class="form-group">
                              <script type="text/javascript">

                                $("#orden_fumigacion_fecha_vencimiento").change(function () {
                                  var orden_fumigacion_proxtrat = "<%= orden_fumigacion_proxtrat %>"
                                  console.log("orden_fumigacion_proxtrat: ",orden_fumigacion_proxtrat)
                                  var fecha_vencimiento = new Date(document.getElementById('orden_fumigacion_fecha_vencimiento').value)
                                  console.log("fecha_vencimiento: ",fecha_vencimiento)
                                  cargar_proximo_tratamiento(fecha_vencimiento,orden_fumigacion_proxtrat)
                                });

                                function cargar_proximo_tratamiento(fecha_vencimiento, orden_fumigacion_proxtrat) {
                                                                  
                                  var listaPeriodos = ["30","60","90","120"]
                                  var select_proximo_tratamiento = document.getElementById('orden_fumigacion_proximo_tratamiento_<%=orden_fumigacion_id*6%>')

                                  console.log('select_proximo_tratamiento: ', select_proximo_tratamiento)

                                  if (select_proximo_tratamiento!= null){
                                    select_proximo_tratamiento.innerHTML = '<option value="">Seleccione prox. tratamiento...</option>'
                                  }

                                  listaPeriodos.forEach(function(periodo){
                                    let opcion = document.createElement('option')
                                    
                                    console.log("fecha_vencimientooooo: ",fecha_vencimiento)

                                    let proximo_vencimiento = sumarfechas(fecha_vencimiento,periodo)
                                    opcion.value = proximo_vencimiento
                                    opcion.text = proximo_vencimiento + " - " + periodo
                                    console.log("periodo: ",periodo)
                                    
                                    if (periodo == orden_fumigacion_proxtrat) {
                                      opcion.setAttribute("selected", "selected")
                                    }

                                    select_proximo_tratamiento.add(opcion)
                                  });
                                   
                                  console.log("select_proximo_tratamiento+++++: ",select_proximo_tratamiento)
                                  $('#contenedor_proximo_tratamiento').append(select_proximo_tratamiento)
                                }

                                function sumarfechas(fecha,dias){
                                  console.log("fecha---while: ", fecha, " dias: ",dias)
                                  while (dias >= 30) {
                                    
                                    var dia = fecha.getDate()
                                    var mes = fecha.getMonth()
                                    var anio = fecha.getFullYear()

                                    console.log("dia---while: ", dia, "mes---while: ",mes, "a√±o---while: ", anio)
                                    if (dia + 30 <= diasxmes(mes,anio)){
                                      cadena = anio + "/" + mes + "/" + (dia + 30)
                                      console.log("cadena1: ", cadena)
                                      
                                    } else {
                                      if (mes != 12) {
                                        
                                        cadena = anio + "/" + (mes+1) + "/" + (dia + 30 - diasxmes(mes-1,anio))
                                        console.log("cadena2: ", cadena)
                                        
                                      }else {
                                        cadena = (anio+1) + "/" + "01" + "/" + (dia + 30 - diasxmes(mes,anio))
                                        console.log("cadena3: ", cadena)
                                      }

                                    }
                                  dias = dias - 30
                                  fecha = new Date(cadena)

                                  }
                                  return fecha
                                }

                                function diasxmes(mes,anio){
                                  let nmes = 31
                                  
                                  if ((mes==4) || (mes==6) || (mes==9)|| (mes==11)){
                                    nmes=30;
                                  } else {
                                    if (mes == 2) {
                                      if (aniobisiesto(anio)) {
                                        nmes=29
                                      } else {nmes=28}
                                    }
                                  }
                                  return nmes
                                }

                                function aniobisiesto(anio){
                                  if ((anio / 4 == 0) && (anio / 100 != 0 || anio / 400 == 0)) {
                                    return true
                                  } else {
                                    return false
                                  }
                                }

