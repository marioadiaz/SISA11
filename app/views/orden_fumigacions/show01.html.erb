            </div>
        </div>
      
      <section id="invoice-cliente">
        <div class="datos-cliente">
          <br>
          <span><strong>Fecha de aplicación:</strong> <%= @orden_fumigacion.fecha_aplicacion %></span>
          <span><strong>Apellido y nombre:</strong>  <%= @orden_fumigacion.cliente.apellido %> <%= @orden_fumigacion.cliente.nombre%></span>
          <span><strong>Domicilio:</strong>  <%= @orden_fumigacion.cliente.domicilio %></span>
          <span><strong>Barrio:</strong>  <%= @orden_fumigacion.cliente.domicilio %></span>
        </div>

        <div class="datos-cliente my-1">
          <br>
          <span><strong>Hora Aplicación:</strong>  <%= @orden_fumigacion.hora_aplicacion.strftime("%H:%M") %></span>
          <span><strong>Telefono:</strong> <%= @orden_fumigacion.cliente.telefono %></span>
          <span><strong>Celular:</strong>  <%= @orden_fumigacion.cliente.celular %></span>
          <span><br></span>
          <br>
        </div> 
   
      </section>
  
      	        <div class="row">
        	<p><hr height=1px>WWF's Symbol</hr></p>
